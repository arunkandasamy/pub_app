- if flash.present?
  - if flash.first.present?
    .container
      .row
        .col-sm-12
          - flash.each do |name, msg|
            - if name.to_s == "error"
              .alert.alert-danger
                = msg
                %a{ class: "close", "data-dismiss" => "alert"} ×
            - elsif name.to_s == "notice"
              .alert.alert-success
                = msg
                %a{ class: "close", "data-dismiss" => "alert"} ×
            - elsif name.to_s == "warning"
              .alert.alert-warning
                = msg
                %a{ class: "close", "data-dismiss" => "alert"} ×
            - else
              .alert.alert-info
                = msg
                %a{ class: "close", "data-dismiss" => "alert"} ×